<idea-plugin>
  <depends>com.intellij.modules.lang</depends>
  <depends>JavaScript</depends>
  <depends>NodeJS</depends>

  <extensions defaultExtensionNs="com.intellij">
    <experimentalFeature id="com.jetbrains.edu.javascript.learning.checkio" percentOfUsers="0">
      <description>Enables support for CheckiO JavaScript</description>
    </experimentalFeature>

    <!-- CheckiO -->
    <httpRequestHandler implementation="com.jetbrains.edu.javascript.learning.checkio.connectors.JsCheckiOOAuthRestService"/>
    <applicationService serviceImplementation="com.jetbrains.edu.javascript.learning.checkio.JsCheckiOSettings"/>
  </extensions>

  <extensions defaultExtensionNs="Educational">
    <!-- CheckiO -->
    <configurator implementationClass="com.jetbrains.edu.javascript.learning.checkio.JsCheckiOConfigurator" language="CheckiO-JavaScript"/>
    <coursesProvider implementation="com.jetbrains.edu.javascript.learning.checkio.JsCheckiOCourseProvider"/>
    <optionsProvider instance="com.jetbrains.edu.javascript.learning.checkio.settings.JsCheckiOOptions"/>
    <checkListener implementation="com.jetbrains.edu.javascript.learning.checkio.checker.JsCheckiOCheckListener"/>
  </extensions>

  <extensions defaultExtensionNs="educational">
    <!-- CheckiO -->
    <languageDecorator implementationClass="com.jetbrains.edu.javascript.learning.checkio.JsCheckiOLanguageDecorator" language="CheckiO-JavaScript" />
  </extensions>

  <application-components>
    <!-- CheckiO -->
    <component>
      <implementation-class>com.jetbrains.edu.javascript.learning.checkio.JsCheckiOApplicationComponent</implementation-class>
    </component>
  </application-components>
</idea-plugin>